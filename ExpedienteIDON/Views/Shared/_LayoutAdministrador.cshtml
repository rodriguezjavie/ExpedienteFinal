<!DOCTYPE html>
@using Microsoft.AspNet.Identity
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -  Expediente Medico</title>
    <!-- google font -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" rel="stylesheet" type="text/css" />
    <script src="https://kit.fontawesome.com/5d1420ebe9.js" crossorigin="anonymous"></script>
    <!-- icons -->
    <link href="@Url.Content("/Scripts/theme/fonts/font-awesome/css/font-awesome.min.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <!-- data tables -->
    <link href="@Url.Content("/Scripts/theme/plugins/datatables/plugins/bootstrap/dataTables.bootstrap4.min.css")" rel="stylesheet" type="text/css" />
    <link href="https://cdn.datatables.net/buttons/1.5.1/css/buttons.dataTables.min.css" rel="stylesheet" type="text/css" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="page-header-fixed sidemenu-closed-hidelogo page-content-white page-md header-dark dark-color logo-dark dark-theme">
    <div class="page-wrapper">
        <!-- start header -->
        <div class="page-header navbar navbar-fixed-top">
            <div class="page-header-inner ">
                <!-- logo start -->
                <div class="page-logo">
                    <a href="@Url.Action("Index","Home")">
                        <img alt="" src="@Url.Content("/Scripts/theme/img/logo.png")">
                        <span class="logo-default">GDS</span>
                    </a>
                </div>
                <!-- logo end -->
                <ul class="nav navbar-nav navbar-left in">
                    <li><a href="#" class="menu-toggler sidebar-toggler font-size-20" title="Ocultar menú"><i class="fa fa-exchange" aria-hidden="true"></i></a></li>
                </ul>
                <ul class="nav navbar-nav navbar-left in">
                    <!-- start full screen button -->
                    <li><a href="javascript:;" class="fullscreen-click font-size-20" title="Pantalla Completa"><i class="fa fa-arrows-alt"></i></a></li>
                    <!-- end full screen button -->
                </ul>
                <ul class="nav navbar-nav navbar-left in">
                    <li><a href="@Url.Action("CreateNoRecord","Patients")" class="font-size-20" title="Crear solo paciente"><i class="fa fa-user-o" aria-hidden="true"></i></a></li>
                </ul>
                <ul class="nav navbar-nav navbar-left in">
                    <li><a href="@Url.Action("Create","Patients")" class="font-size-20" title="Crear paciente con historial"><i class="fa fa-vcard" aria-hidden="true"></i></a></li>
                </ul>
                <!-- start mobile menu -->
                <a href="javascript:;" class="menu-toggler responsive-toggler" data-toggle="collapse" data-target=".navbar-collapse">
                    <span></span>
                </a>
                <!-- end mobile menu -->
                <!-- start header menu -->
                @Html.Partial("_LoginPartial")
            </div>
        </div>
        <!-- end header -->
    </div>
    <!-- start page container -->
    <div class="page-container">
        <!-- start sidebar menu -->
        <div class="sidebar-container">
            <div class="sidemenu-container navbar-collapse collapse fixed-menu">
                <div id="remove-scroll" class="left-sidemenu">
                    <ul class="sidemenu  page-header-fixed slimscroll-style" data-keep-expanded="false" data-auto-scroll="true" data-slide-speed="200" style="padding-top: 20px">
                        <li class="sidebar-toggler-wrapper hide">
                            <div class="sidebar-toggler">
                                <span></span>
                            </div>
                        </li>
                        <li class="sidebar-user-panel">
                            <div class="user-panel">
                                <div class="pull-left image">
                                    <img src="@Url.Content("/Scripts/theme/img/dp.jpg")" class="img-circle user-img-circle" alt="User Image" />
                                </div>
                                <div class="pull-left info">
                                    <p> @User.Identity.GetUserName()</p>
                                    <small> @User.Identity.GetUserName()</small>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item active open">
                            <a href="@Url.Action("Index","Home")" class="nav-link">
                                <i class="material-icons">dashboard</i>
                                <span class="title">Inicio</span>
                                <span class="selected"></span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link nav-toggle">
                                <i class="material-icons">accessible</i>
                                <span class="title">Pacientes</span> <span class="arrow"></span>
                            </a>
                            <ul class="sub-menu">
                                <li class="nav-item  ">
                                    <a href="@Url.Action("Index","Patients")" class="nav-link ">
                                        <span class="title">Lista de pacientes</span>
                                    </a>
                                </li>
                                <li class="nav-item  ">
                                    <a href="@Url.Action("Create","Patients")" class="nav-link ">
                                        <span class="title">Nuevo Paciente</span>
                                    </a>
                                </li>
                                <li class="nav-item  ">
                                    <a href="@Url.Action("CreateNoRecord","Patients")" class="nav-link ">
                                        <span class="title">Nuevo Paciente Sin Historial</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link nav-toggle">
                                <i class="material-icons">supervisor_account</i>
                                <span class="title">Usuarios</span> <span class="arrow"></span>
                            </a>
                            <ul class="sub-menu">
                                <li class="nav-item  ">
                                    <a href="@Url.Action("Index","UserRole")" class="nav-link ">
                                        <span class="title">Lista de Usuarios</span>
                                    </a>
                                </li>
                                <li class="nav-item  ">
                                    <a href="@Url.Action("Register","Account")" class="nav-link ">
                                        <span class="title">Nuevo Usuario</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- end sidebar menu -->
        <!-- start Render -->
        @RenderBody()
        <!-- end Render -->
        <!-- start footer -->
        <div class="page-footer">
            <div class="page-footer-inner">
                @DateTime.Now.Year &copy; Powered by
                <a href="mailto:ventas@gooddata.com.mx" target="_top" class="makerCss">Good Data Systems</a>
            </div>
            <div class="scroll-to-top">
                <i class="material-icons">eject</i>
            </div>
        </div>
        <!-- end footer -->
    </div>
    <!-- end page container -->
    <!-- start js include path -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.6/moment.min.js"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/plugins/jquery/jquery.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/plugins/popper/popper.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/plugins/jquery-blockui/jquery.blockui.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/plugins/jquery-slimscroll/jquery.slimscroll.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/plugins/jquery-validation/js/jquery.validate.min.js")"></script>
    <!-- bootstrap -->
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/plugins/bootstrap/js/bootstrap.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/plugins/bootstrap-colorpicker/js/bootstrap-colorpicker-init.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/plugins/bootstrap-datetimepicker/js/bootstrap-datetimepicker.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/plugins/bootstrap-datetimepicker/js/bootstrap-datetimepicker-init.js")"></script>
    <!-- Common js-->
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/js/app.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/js/layout.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/js/theme-color.js")"></script>
    <!-- Material -->
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/plugins/material/material.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/js/pages/material_select/getmdl-select.js")"></script>
    <!-- dropzone -->
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/plugins/dropzone/dropzone.js")"></script>
    <!-- Mask -->
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/plugins/bootstrap-inputmask/bootstrap-inputmask.min.js")"></script>
    <!-- Date picker -->
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/plugins/material-datetimepicker/bootstrap-material-datetimepicker.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/plugins/material-datetimepicker/datetimepicker.js")"></script>
    <!--tags input-->
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/plugins/jquery-tags-input/jquery-tags-input.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/plugins/jquery-tags-input/jquery-tags-input-init.js")"></script>
    <!--select2-->
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/plugins/select2/js/select2.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/js/pages/select2/select2-init.js")"></script>
    <!-- counterup -->
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/plugins/counterup/jquery.waypoints.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/plugins/counterup/jquery.counterup.min.js")"></script>
    <!-- data tables -->
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/plugins/datatables/jquery.dataTables.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/plugins/datatables/plugins/bootstrap/dataTables.bootstrap4.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/plugins/datatables/editabletable.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/js/pages/table/editable_table_data.js")"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.1/js/buttons.html5.min.js"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/theme/js/pages/table/table_data.js")"></script>
    <!--Chart JS-->
    <script src="@Url.Content("/Scripts/theme/plugins/chart-js/Chart.bundle.js")"></script>
    <script src="@Url.Content("/Scripts/theme/plugins/chart-js/utils.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $(".toggle-accordion").on("click", function () {
                var accordionId = $(this).attr("accordion-id"),
                    numPanelOpen = $(accordionId + ' .collapse.show').length;

                $(this).toggleClass("active");

                if (numPanelOpen == 0) {
                    openAllPanels(accordionId);
                } else {
                    closeAllPanels(accordionId);
                }
            })

            openAllPanels = function (aId) {
                $(aId + ' .collapse:not(".in")').collapse('show');
                const link = document.getElementById("PanelsLink");
                link.text = 'Cerrar Paneles';
            }
            closeAllPanels = function (aId) {
                $(aId + ' .collapse.show').collapse('hide');
                const link = document.getElementById("PanelsLink");
                link.text = 'Abrir Paneles';
            }
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
