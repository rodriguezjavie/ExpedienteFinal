@model ExpedienteIDON.Models.Doctor

@{
    ViewBag.Title = "Details";
}

<!-- start page content -->
<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <div class="page-title-breadcrumb">
                <div class=" pull-left">
                    <div class="page-title">Perfil del Doctor</div>
                </div>
                <ol class="breadcrumb page-breadcrumb pull-right">
                    <li>
                        <i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="@Url.Action("Index","Home")">Inicio</a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li>
                        <a class="parent-item" href="@Url.Action("Index","Doctors")">Doctores</a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li class="active">Perfil del Doctor</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <!-- BEGIN PROFILE SIDEBAR -->
                <div class="profile-sidebar">
                    <div class="card ">
                        <div class="card-body no-padding height-9">
                            <div class="row">
                                <div class="profile-userpic">
                                    <img src="@Url.Content("/Scripts/theme/img/user/user8.jpg")" class="img-responsive" alt="">
                                </div>
                            </div>
                            <div class="profile-usertitle">
                                <div class="profile-usertitle-name"> @Html.DisplayFor(model => model.Name) </div>
                                <div class="profile-usertitle-job"> Doctor </div>
                            </div>
                            <!-- END SIDEBAR USER TITLE -->
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-head ">
                            <header>Información</header>
                        </div>
                        <div class="card-body no-padding height-9">
                            <ul class="list-group list-group-unbordered">
                                <li class="list-group-item">
                                    <b>Genero </b>
                                    <div class="profile-desc-item pull-right">@Html.DisplayFor(model => model.DoctorGender)</div>
                                </li>
                                <li class="list-group-item">
                                    <b>Email </b>
                                    <div class="profile-desc-item pull-right">@Html.DisplayFor(model => model.Email)</div>
                                </li>
                                <li class="list-group-item">
                                    <b>Teléfono</b>
                                    <div class="profile-desc-item pull-right">@Html.DisplayFor(model => model.Phone)</div>
                                </li>
                                <li class="list-group-item">
                                    <b>Celular</b>
                                    <div class="profile-desc-item pull-right">@Html.DisplayFor(model => model.Cellphone)</div>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-head ">
                            <header>Dirección</header>
                        </div>
                        <div class="card-body no-padding height-9">
                            <div class="row text-center m-t-10">
                                <div class="col-md-12">
                                    <p>
                                        @Html.DisplayFor(model => model.Address)
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- END BEGIN PROFILE SIDEBAR -->
                <!-- BEGIN PROFILE CONTENT -->
                <div class="profile-content">
                    <div class="row">
                        <div class="card">
                            <div class="white-box">
                                <!-- Nav tabs -->
                                <div class="p-rl-20">
                                    <ul class="nav customtab nav-tabs" role="tablist">
                                        <li class="nav-item"><a href="#tab1" class="nav-link active" data-toggle="tab">Actvidades</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- END PROFILE CONTENT -->
                </div>
            </div>
        </div>
    </div>
    <!-- end page content -->
</div>
<!-- end page container -->E