@model IEnumerable<ExpedienteIDON.Models.Doctor>

@{
    ViewBag.Title = "Index";

    Layout = ViewBag.Layout;

}

<!-- start page content -->
<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <div class="page-title-breadcrumb">
                <div class=" pull-left">
                    <div class="page-title">Lista de Doctores</div>
                </div>
                <ol class="breadcrumb page-breadcrumb pull-right">
                    <li>
                        <i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="@Url.Action("Index","Home")">Inicio</a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li>
                        <a class="parent-item" href="@Url.Action("Index","Doctors")">Doctores</a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li class="active">Lista de Doctores</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="tabbable-line">
                    <div class="tab-content">
                        <div class="tab-pane active fontawesome-demo" id="tab1">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="card  card-box">
                                        <div class="card-head">
                                            <header></header>
                                            <div class="tools">
                                                <a class="fa fa-repeat btn-color box-refresh" href="javascript:;"></a>
                                                <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                                                <a class="t-close btn-color fa fa-times" href="javascript:;"></a>
                                            </div>
                                        </div>
                                        <div class="card-body ">
                                            <div class="table-scrollable">
                                                <table id="tableExport" class="display table table-hover table-checkable order-column m-t-20" style="width: 100%">
                                                    <thead>
                                                        <tr>
                                                            <th></th>
                                                            <th> 
                                                                Nombre 
                                                            </th>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.Email)
                                                            </th>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.Cellphone)
                                                            </th>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.Phone)
                                                            </th>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.Address)
                                                            </th>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.DoctorGender)
                                                            </th>
                                                            <th> Acciones </th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model)
                                                        {
                                                            <tr class="odd gradeX">
                                                                <td class="patient-img">
                                                                    <img src="@Url.Content("/Scripts/theme/img/user/user1.jpg")" alt="">
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.Name) @Html.DisplayFor(modelItem => item.LastName)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.Email)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.Cellphone)
                                                                </td>
                                                                <td class="center">
                                                                    <a href="tel:@Html.DisplayFor(modelItem => item.Phone)">
                                                                        @Html.DisplayFor(modelItem => item.Phone)
                                                                    </a>
                                                                </td>
                                                                <td class="center">
                                                                    @Html.DisplayFor(modelItem => item.Address)
                                                                </td>
                                                                <td class="center">
                                                                    @Html.DisplayFor(modelItem => item.DoctorGender)
                                                                </td>
                                                                <td class="center">
                                                                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-success btn-xs">
                                                                        <i class="fa fa-user-circle"></i>
                                                                    </a>
                                                                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-primary btn-xs">
                                                                        <i class="fa fa-pencil"></i>
                                                                    </a>
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end page content -->