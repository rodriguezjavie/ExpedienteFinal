@model ExpedienteIDON.ViewModels.PrescriptionViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <div class="page-title-breadcrumb">
                <div class=" pull-left">
                    <div class="page-title">Datos paciente</div>
                </div>
                <ol class="breadcrumb page-breadcrumb pull-right">
                    <li>
                        <i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="@Url.Action("Index","Home")">Inicio</a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li>
                        <i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="@Url.Action("Index","Patients")">Pacientes</a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li class="active">Datos paciente</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="card card-box">
                    <div class="card-body ">

                        <h2>Datos del Paciente</h2>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                @Html.LabelFor(model => model.Prescription.Patient.Name, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Prescription.Patient.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                            <div class="form-group col-md-4">
                                @Html.LabelFor(model => model.Prescription.Patient.LastName, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Prescription.Patient.LastName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                            <div class="form-group col-md-4">
                                @Html.LabelFor(model => model.Prescription.Patient.PatientGender, htmlAttributes: new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.Prescription.Patient.PatientGender, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
                            </div>
                            <div class="form-group col-md-4">
                                @Html.LabelFor(model => model.Prescription.Patient.Phone, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Prescription.Patient.Phone, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                            <div class="form-group col-md-4">
                                @Html.LabelFor(model => model.Prescription.Patient.Cellphone, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Prescription.Patient.Cellphone, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                            <div class="form-group col-md-4">
                                @Html.LabelFor(model => model.Prescription.Patient.Birthday, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Prescription.Patient.Birthday, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                        </div>
                        <h2>Datos del Medico</h2>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                @Html.LabelFor(model => model.Prescription.Doctor.Name, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Prescription.Doctor.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                            <div class="form-group col-md-4">
                                @Html.LabelFor(model => model.Prescription.Doctor.LastName, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Prescription.Doctor.LastName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                            <div class="form-group col-md-4">
                                @Html.LabelFor(model => model.Prescription.Doctor.Cedula, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Prescription.Doctor.Cedula, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                        </div>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-horizontal">
                                <h4>Datos de la Receta</h4>
                                <hr />
                            </div>
                            <div class="form-group col-md-6">
                                <div class="form-group row">
                                    @Html.LabelFor(model => model.MedicinesPrescription.Medicine, htmlAttributes: new { @class = "control-label col-md-4" })
                                    @Html.EditorFor(model => model.MedicinesPrescription.Medicine, new { htmlAttributes = new { @class = "form-control col-md-10" } })
                                    @Html.ValidationMessageFor(model => model.MedicinesPrescription.Medicine, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <div class="form-group row">
                                    @Html.LabelFor(model => model.MedicinesPrescription.UnitOfMeasure, htmlAttributes: new { @class = "control-label col-md-4" })
                                    @Html.EditorFor(model => model.MedicinesPrescription.UnitOfMeasure, new { htmlAttributes = new { @class = "form-control col-md-10" } })
                                    @Html.ValidationMessageFor(model => model.MedicinesPrescription.UnitOfMeasure, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <div class="form-group row">
                                    @Html.LabelFor(model => model.MedicinesPrescription.Dose, htmlAttributes: new { @class = "control-label col-md-4" })
                                    @Html.EditorFor(model => model.MedicinesPrescription.Dose, new { htmlAttributes = new { @class = "form-control col-md-10" } })
                                    @Html.ValidationMessageFor(model => model.MedicinesPrescription.Dose, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <div class="form-group row">
                                    @Html.LabelFor(model => model.MedicinesPrescription.Frequency, htmlAttributes: new { @class = "control-label col-md-4" })
                                    @Html.EditorFor(model => model.MedicinesPrescription.Frequency, new { htmlAttributes = new { @class = "form-control col-md-10" } })
                                    @Html.ValidationMessageFor(model => model.MedicinesPrescription.Frequency, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <div class="form-group row">
                                    @Html.LabelFor(model => model.MedicinesPrescription.Administration, htmlAttributes: new { @class = "control-label col-md-4" })
                                    @Html.EditorFor(model => model.MedicinesPrescription.Administration, new { htmlAttributes = new { @class = "form-control col-md-10" } })
                                    @Html.ValidationMessageFor(model => model.MedicinesPrescription.Administration, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <div class="form-group row">
                                    @Html.LabelFor(model => model.MedicinesPrescription.StartDate, htmlAttributes: new { @class = "control-label col-md-4" })
                                    @Html.EditorFor(model => model.MedicinesPrescription.StartDate, new { htmlAttributes = new { @class = "form-control col-md-10" } })
                                    @Html.ValidationMessageFor(model => model.MedicinesPrescription.StartDate, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <div class="form-group row">
                                    @Html.LabelFor(model => model.MedicinesPrescription.EndDate, htmlAttributes: new { @class = "control-label col-md-4" })
                                    @Html.EditorFor(model => model.MedicinesPrescription.EndDate, new { htmlAttributes = new { @class = "form-control col-md-10" } })
                                    @Html.ValidationMessageFor(model => model.MedicinesPrescription.EndDate, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <div class="form-group row">
                                    @Html.LabelFor(model => model.MedicinesPrescription.Indications, htmlAttributes: new { @class = "control-label col-md-4" })
                                    @Html.EditorFor(model => model.MedicinesPrescription.Indications, new { htmlAttributes = new { @class = "form-control col-md-10" } })
                                    @Html.ValidationMessageFor(model => model.MedicinesPrescription.Indications, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            @Html.HiddenFor(m => m.Prescription.PatientId)
                            @Html.HiddenFor(m => m.Prescription.DoctorId)


                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-default" />
                                </div>
                            </div>
                        }

                        <div>
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
